{
	"environments": [
		{
			"node": true,
			"tests": {
				"ttl": 32000,
				"maxFail": 0,
				"maxSkip": 1,
				"include": [
					"./tests/a*.js",
					"./tests/c*.js",
					"./tests/l*.js",
					"./tests/obser*.js",
					"./tests/u*.js"
				],
				"exclude": [
					"./tests/browser-host-objects.js"
				]
			},
			"coverage": {
				"include": [
					"./src/**/*.js"
				],
				"reports": [
					{
						"format": "lcov",
						"path": "./reports/coverage.lcov"
					},
					{
						"format": "html",
						"path": "./reports/coverage-html"
					}
				]
			}
		}
	]
}