{
	"environments": [
		{
			"browser": {
				"type": "chromium",
				"executors": {
					"type": "iframe"
				}
			},
			"tests": {
				"ttl": 32000,
				"maxFail": 0,
				"maxSkip": 5,
				"include": [
					"./tests/*.js"
				],
				"exclude": [
					"**/tests/*-performance-*.js"
				]
			},
			"coverage": {
				"include": [
					"./src/**/*.js"
				]
			}
		}
	]
}